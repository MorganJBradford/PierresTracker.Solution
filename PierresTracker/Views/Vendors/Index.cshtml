@{
  Layout = "_Layout";
}

@using PierresTracker.Models;

<h1>Vendors</h1>

@if (Model.Count == 0)
{
  <h3>No Vendors have been added.</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
  <form action="/vendors/@vendor.Id" method="post">
    <input id="venderId" name="venderId" type="hidden" value="@vendor.Id">
    <button type="submit">Remove this Vender</button>
  </form>
}

<p><a href="/">Back home</a></p>