@{
  Layout = "_Layout";
}

<h1>Vendor Order Details: </h1>

<h2>Title: @Model["order"].Title</h2>
<h2>Description: @Model["order"].Description</h2>
<h2>$@Model["order"].Price</h2>
<h2>Order Date: @Model["order"].Date</h2>
<h3>Vendor: @Model["vendor"].Name</h3>

<a href='/categories/@Model["vendor"].Id/orders/new'>Add another order</a>
<a href='/categories'>View all categories</a>