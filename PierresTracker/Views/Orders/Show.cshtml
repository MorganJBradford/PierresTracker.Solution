@{
  Layout = "_Layout";
}

<h1>Vendor Order Details: </h1>

<h2>Title: @Model["order"].Title</h2>
<h2>Description: @Model["order"].Description</h2>
<h2>$@Model["order"].Price</h2>
<h2>Order Date: @Model["order"].Now</h2>
<h3>Vendor: @Model["vendor"].Name</h3>

<form action='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id' method="post">
  <input id="vendorId" name="vendorId" type="hidden" value='@Model["vendor"].Id'>
  <input id="orderId" name="orderId" type="hidden" value='@Model["order"].Id'>
  <button type="submit">Delete this order</button>
</form>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
<a href='/vendors'>View all vendors</a>